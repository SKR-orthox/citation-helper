{
  "manifest_version": 2,
  "name": "Multi-Site Citation Helper",
  "version": "1.0",
  "description": "Automatically generates citations from PubMed, Nature, ScienceDirect, Springer, Wiley, and more.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_title": "Generate citation",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "128": "icons/icon128.png"
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite",

    "*://pubmed.ncbi.nlm.nih.gov/*",
    "*://scholar.google.com/*",
    "*://www.webofscience.com/*",
    "*://www.scopus.com/*",
    "*://www.nature.com/*",
    "*://www.sciencedirect.com/*",
    "*://link.springer.com/*",
    "*://*.wiley.com/*",

    "*://*.tandfonline.com/*",
    "*://*.taylorandfrancis.com/*",
    "*://academic.oup.com/*",
    "*://*.cambridge.org/*",
    "*://journals.plos.org/*",
    "*://*.plos.org/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://pubmed.ncbi.nlm.nih.gov/*",
        "*://scholar.google.com/*",
        "*://www.webofscience.com/*",
        "*://www.scopus.com/*",
        "*://www.nature.com/*",
        "*://www.sciencedirect.com/*",
        "*://link.springer.com/*",
        "*://*.wiley.com/*",

        "*://*.tandfonline.com/*",
        "*://*.taylorandfrancis.com/*",
        "*://academic.oup.com/*",
        "*://*.cambridge.org/*",
        "*://journals.plos.org/*",
        "*://*.plos.org/*"
      ],
      "js": [
        "content/content-common.js",
        "content/content-pubmed.js",
        "content/content-nature.js",
        "content/content-general.js",
        "content/content-plos.js",
        "content/content-tandfonline.js",
        "content/content-router.js"
      ],
      "run_at": "document_end"
    }
  ]
}