{
  "manifest_version": 2,
  "name": "Citation Helper (PubMed MVP)",
  "version": "0.5.0",
  "description": "Generate citations from PubMed.",
  "browser_action": {
    "default_title": "Citation Helper",
    "default_popup": "popup.html"
  },
  "icons": {
  "16": "icons/icon16.png",
  "32": "icons/icon32.png",
  "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "clipboardWrite",
    "*://pubmed.ncbi.nlm.nih.gov/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://pubmed.ncbi.nlm.nih.gov/*"],
      "js": ["content/content-pubmed.js"],
      "run_at": "document_end"
    }
  ]
}